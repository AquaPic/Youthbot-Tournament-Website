extends layout

block content
  #results.ybot-anchor
  .w3-content.w3-card-12.ybot-theme-secb
    .ybot-theme-seca.w3-center
      h3 Match #{matchId}
    .w3-row-padding
      .w3-col(style='width: 45%;')
        p.w3-xlarge
          span.w3-text-green #{greenTeamName}
          span.w3-right #{score}
      .w3-col(style='width: 10%;')
        .w3-display-container(style='width: 100%; height: 82px')
          .w3-display-middle and
      .w3-col(style='width: 45%;')
        p.w3-xlarge
          span.w3-left #{score}
          span.w3-right.w3-text-red #{redTeamName}
