extends layout

block links
  li
    a.w3-large(href='/competition1') 1st Competition
  //li
    a.w3-large(href='/competition2') 2nd Competition
  //li
    a.w3-large(href='/competition3') 3rd Competition
  //li
    a.w3-large(href='/championship') Championship

block content
    .w3-content
      h3 YouthBOT 2018 Standings
      .w3-card-2
        table.w3-table
          tr.ybot-theme-seca
            th Rank
            th Team
            th Wins
            th Ties
            th Loses
            th Average Score
            th Highest Score
          -for (var i=0; i<standings.length; i+=2) {
            tr
              td= i+1
              td= standings[i].team
              td= standings[i].wins
              td= standings[i].ties
              td= standings[i].loses
              td= standings[i].score
              td= standings[i].highest
            if (standings[i+1])
              tr.ybot-theme-secb
                td= i+2
                td= standings[i+1].team
                td= standings[i+1].wins
                td= standings[i+1].ties
                td= standings[i+1].loses
                td= standings[i+1].score
                td= standings[i+1].highest
          -}
