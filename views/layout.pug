doctype html
html
  head
    title YouthBOT Tournaments
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://www.w3schools.com/lib/w3.css')

  body
    -var active = 'Standings'
    -var baseurl ='/'

    nav#side_nav.w3-top.w3-sidenav.w3-card-4.w3-animate-left.ybot-theme-secb(style='display:none;')
      div.w3-container.ybot-theme-pri
        h5
          span
            a.ybot-theme-hover-pri.w3-padding-0(href='/' style='display: inline;') Standings
          span.w3-right.w3-large.w3-closenav(href='javascript:void(0)', onclick='sidebar_close()') X

      mixin tournLinks(name, display)
        if (String(url).includes(name))
          -active = display
          -baseurl = '/' + name
          a.ybot-theme-secc.w3-hover-shadow(href='/' + name)= display
        else
          a.w3-hover-shadow(href='/' + name)= display

      +tournLinks('competition1', '1st Competition')
      +tournLinks('competition2', '2nd Competition')
      +tournLinks('competition3', '3rd Competition')
      +tournLinks('championship', 'Championship')
      +tournLinks('practice', 'Practice')
      +tournLinks('field-testing', 'Field Testing')

    #header.w3-top
      ul.w3-navbar.ybot-theme-pri
        li
          a.w3-xlarge(href='javascript:void(0)' onclick='sidebar_open()') â˜°
        li#header_title.ybot-animate(style='margin-left:0px;')
          a.w3-xlarge(href=baseurl) #{active}
        li
          a.w3-xlarge(href='#') Link
        li
          a.w3-xlarge(href='#') Link

    #main.w3-container(style='margin-top:68px; margin-left:40px; margin-right:40px;')
      block content

  script(src='/javascripts/scripts.js')
